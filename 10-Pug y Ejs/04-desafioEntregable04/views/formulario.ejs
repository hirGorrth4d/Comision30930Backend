<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div  class="pageContainer">
        <h1>INGRESA UN NUEVO PRODUCTO</h1>
        <form>
            <div class="mb-3">
                <label for="nombre" class="form-label .col-form-label">Nombre</label>
                <div class="col-sm-100">
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>
            </div>
            <div class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" class="form-control" id="precio" name="precio">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="form-label">Imagen</label>
                <input type="text" class="form-control" id="thumbnail" name="thumbnail">
            </div>
            <div class="mb-3">
                <button type="button" id="boton" class="btn btn-success">Guardar</button>
            </div>
        </form>
            <div>
                <a href='http://localhost:8080/productos'><button id="btnForm" class="btn btn-success">Ver todos los productos</button></a>
            </div>
    </div>
    <script src="clientForm.js"></script>
</body>

</html>